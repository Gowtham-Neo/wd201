<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>todo-manager</title> 
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="../public/css/styles.css">
</head>
<body>
    <div>
        <h1>Git hooked</h1>
    </div>
    <div class="grid grid-cols-6 my-2">
        <div class="col-start-3 col-sapn-2">
            <%- include("header.ejs") %>
            <form>
                <div class="flex gap-2 py-3">
                    <div class="flex-auto">
                        <input type="text" placeholder="What's next?" class="border border-gray-300 text-gray-900 rounded p-2.5 " required>
                    </div>
                    <div class="flex-auto">
                        <input type="date" class="border border-gray-300 text-gray-900 rounded p-2" required >
                    </div>
                    <div class="flex-none">
                        <button type="submit" class="text-gray-900 rounded px-3 py-2 bg-green-600 text-white">Add</button>
                    </div>
                </div>
            </form>
            <div>
                <h5>Overview</h5>
                <ul class="list-none">
                    <li class="Todo-app">
                        <div class="flex items-center w-fit my-2 px-2 px-1 rounded hover:bg-purple-50">
                            <input id="link1"type="checkbox" class="w-4 h-6 rounded border border-gray-300 bg-gray-100 text-blue-600 ">
                            <label for="link1" class="ml-2 text-sm text-gray-600 cursor-pointer"> Have to go to gym</label>
                            <a href="#" class="trash-icon hidden ml-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                              </svg>
                            </a>
                              
                        </div>
                        <div class="flex items-center w-fit my-2 px-2 px-1 rounded hover:bg-purple-50">
                            <input id="link2"type="checkbox" class="w-4 h-6 rounded border border-gray-300 bg-gray-100 text-blue-600 ">
                            <label for="link2" class="ml-2 text-sm text-gray-600 cursor-pointer"> Have to go to gym</label>
                            <a href="#" class="hidden trash-icon ml-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                </svg>
                            </a>
                        </div>
                    </li>
                </ul>
                <h5>Due Today</h5>
                <h5>Due Later</h5>
            </div>
        </div>

    </div>
